<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:JamiAlgeria.Views"
       xmlns:resx="clr-namespace:JamiAlgeria.Resources.Strings"
       x:Class="JamiAlgeria.AppShell">
    <TabBar>
        <ShellContent Title="{x:Static resx:Strings.Home}" ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent Title="{x:Static resx:Strings.PrayerTimes}" ContentTemplate="{DataTemplate views:PrayerTimesPage}" />
        <ShellContent Title="{x:Static resx:Strings.Azkar}" ContentTemplate="{DataTemplate views:AzkarPage}" />
        <ShellContent Title="{x:Static resx:Strings.Tasbeeh}" ContentTemplate="{DataTemplate views:TasbeehPage}" />
        <ShellContent Title="{x:Static resx:Strings.Settings}" ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
