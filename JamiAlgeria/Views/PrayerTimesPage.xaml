<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:JamiAlgeria.Resources.Strings"
             xmlns:viewmodels="clr-namespace:JamiAlgeria.ViewModels"
             xmlns:models="clr-namespace:JamiAlgeria.Models"
             x:Class="JamiAlgeria.Views.PrayerTimesPage"
             Title="{x:Static resx:Strings.PrayerTimes}">
    <ContentPage.BindingContext>
        <viewmodels:PrayerTimesViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Times}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:PrayerTime">
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                    <Label Text="{Binding Time}" Grid.Column="1" />
                    <Grid.Triggers>
                        <DataTrigger TargetType="Grid" Binding="{Binding IsNext}" Value="True">
                            <Setter Property="BackgroundColor" Value="#AAE0FFE0" />
                        </DataTrigger>
                    </Grid.Triggers>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
