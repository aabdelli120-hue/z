<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:JamiAlgeria.Resources.Strings"
             xmlns:viewmodels="clr-namespace:JamiAlgeria.ViewModels"
             x:Class="JamiAlgeria.Views.TasbeehPage"
             Title="{x:Static resx:Strings.Tasbeeh}">
    <ContentPage.BindingContext>
        <viewmodels:TasbeehViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="{Binding Count}" FontSize="48" HorizontalOptions="Center" />
        <Button Text="{x:Static resx:Strings.Increment}" Command="{Binding IncrementCommand}" FontSize="24" />
        <Button Text="{x:Static resx:Strings.Reset}" Command="{Binding ResetCommand}" />
    </StackLayout>
</ContentPage>
