<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:JamiAlgeria.Resources.Strings"
             xmlns:viewmodels="clr-namespace:JamiAlgeria.ViewModels"
             xmlns:models="clr-namespace:JamiAlgeria.Models"
             x:Class="JamiAlgeria.Views.AzkarPage"
             Title="{x:Static resx:Strings.Azkar}">
    <ContentPage.BindingContext>
        <viewmodels:AzkarViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout Padding="10" Spacing="20">
            <Label Text="{x:Static resx:Strings.MorningAzkar}" FontAttributes="Bold" FontSize="20" />
            <CollectionView ItemsSource="{Binding Morning}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:AzkarItem">
                        <StackLayout Padding="5">
                            <Label Text="{Binding Text}" FontSize="18" />
                            <Label Text="{Binding Translation}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="{x:Static resx:Strings.EveningAzkar}" FontAttributes="Bold" FontSize="20" />
            <CollectionView ItemsSource="{Binding Evening}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:AzkarItem">
                        <StackLayout Padding="5">
                            <Label Text="{Binding Text}" FontSize="18" />
                            <Label Text="{Binding Translation}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
