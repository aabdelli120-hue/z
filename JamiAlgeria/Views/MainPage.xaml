<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:JamiAlgeria.Resources.Strings"
             x:Class="JamiAlgeria.Views.MainPage"
             Title="{x:Static resx:Strings.Home}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="#00111A" Offset="0"/>
                <GradientStop Color="#003B46" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="جامع الجزائر" FontSize="32" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="{x:Static resx:Strings.Welcome}" FontSize="16" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
